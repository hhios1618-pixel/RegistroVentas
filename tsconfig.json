{
  "compilerOptions": {
    "target": "ES2017",
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "plugins": [{ "name": "next" }],
    "paths": {
      "@/*": ["./src/*"],

      // ðŸ”¥ Aliases explÃ­citos para case-sensitive en Vercel
      "@/components/input": ["./src/components/Input"],
      "@/components/textarea": ["./src/components/Textarea"],
      "@/components/checkbox": ["./src/components/Checkbox"],
      "@/components/ui/label": ["./src/components/label"]
    }
  },
  "include": [
    "next-env.d.ts",
    "src/**/*",
    ".next/types/**/*.ts"
  ],
  "exclude": [
    "node_modules",
    "supabase",
    "supabase/**/*"
  ]
}